{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "outDir": "build",
        "sourceMap": false,
        "allowJs": true,
        "moduleResolution": "node",
        "rootDir": ".",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true,
        "alwaysStrict": true,
        "lib": [
            "es2020"
        ],
        "baseUrl": "."
    },
    "include": [
        "src/**/*.ts",
        "tests/**/*.ts"
    ],
    "exclude": [
        "./node_modules"
    ]
}
